<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1 class="span7 text-center">View All Slinky Profiles</h1>

	<%= form_tag(users_path, :method => "get", id: "search-form") do %>
		<%= text_field_tag :search, params[:search], placeholder: "Search Users", id: "search-users" %>
		<%= text_field_tag :miles, params[:miles], placeholder: "Miles", id: "search-miles" %>
		<%= submit_tag "Search", id: "search-submit" %>
	<% end %>

	<br />
	<button class="hide-show" id="hide">Hide Map</button>
	<br />
	<button class="hide-show" id="show">Show Map</button>



<div class="wrapper" id="hide show">
	<div class="map" id="map"></div>
		<script type="text/javascript" class="google-map" id="map">
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		markers = handler.addMarkers(<%=raw @hash.to_json %>);
		handler.bounds.extendWith(markers);
		handler.fitMapToBounds();
		});
		</script>

		<script>
			$("#hide").click(function(){
			$("#map").hide();
			});

			$("#show").click(function(){
			$("#map").show();
			});
		</script>

</div>



<tbody class="page">
    <%= render @users %>
</tbody>





<div class="col-md-12 span7 text-center"><br /><%= paginate @users.page %></div>




