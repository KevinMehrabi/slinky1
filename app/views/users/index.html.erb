<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1 class="span7 text-center">View All Slinky Profiles</h1>

	<%= form_tag(users_path, :method => "get", id: "search-form") do %>
		<%= text_field_tag :search, params[:search], placeholder: "Search Users", id: "search-users" %>
		<%= text_field_tag :miles, params[:miles], placeholder: "Miles", id: "search-miles" %>
		<%= submit_tag "Search", id: "search-submit" %>
	<% end %>


<div class="wrapper">
	<div class="map" id="map"></div>
		<script type="text/javascript" class="google-map">
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		markers = handler.addMarkers(<%=raw @hash.to_json %>);
		handler.bounds.extendWith(markers);
		handler.fitMapToBounds();
		});
		</script>
	<i class="top"></i>
	<i class="right"></i>
	<i class="bottom"></i>
	<i class="left"></i>
	<i class="top left"></i>
	<i class="top right"></i>
	<i class="bottom left"></i>
	<i class="bottom right"></i>
</div>


<tbody class="page">
    <%= render @users %>
</tbody>





<div class="col-md-12 span7 text-center"><br /><%= paginate @users.page %></div>




