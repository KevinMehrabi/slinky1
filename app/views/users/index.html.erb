<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h3 class="span7 text-center">Search Users</h1>

	<%= form_tag(users_path, :method => "get", id: "search-form") do %>
		<%= text_field_tag :search, params[:search], placeholder: "Industry", id: "search-users", :required => true %>
		<%= text_field_tag :miles, params[:miles], placeholder: "Miles", id: "search-miles", :required => true %>
		<%= submit_tag "Search", id: "search-submit", value: "Go" %>
	<% end %>

	<br />

	<div id="button-container">
		<span class="hide-show" id="hide">Toggle Map</span>
		<span class="show-profiles-button jumper" href="#jump">User List</span>
	</div>

	<br />
	<br />
	


<div class="wrapper" id="hide show">
	<div class="map" id="map"></div>
		<script type="text/javascript" class="google-map" id="map">
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		markers = handler.addMarkers(<%=raw @hash.to_json %>);
		handler.bounds.extendWith(markers);
		handler.fitMapToBounds();
		});
		</script>

		<script id="button-hide">
			$("#hide").click(function(){
			$("#map").toggle();
			});
		</script>
		

		<script>
			$(document).ready(function() {
			$(".jumper").on("click", function( e ) {

			e.preventDefault();

			$("body, html").animate({ 
			scrollTop: $( $(this).attr('href') ).offset().top 
			}, 600);

			});
			});
		</script>

</div>
<br />


<div id="jump">
	<tbody class="page">	
	    	<%= render @users %>
	</tbody>
</div>





<div class="col-md-12 span7 text-center"><br /><%= paginate @users.page %></div>




