<body class="about-h1" style="font-family: 'Source Sans Pro', sans-serif;">
	<div class="top-about">
			<img id="slinky-logo" src="https://s3-us-west-1.amazonaws.com/the-slinky/slinky-s.png">
			<h1 class="top-about-text">Slinky is...</h1>
			<h2 class="about-h1 top-about-text">the location based social network for business professionals</h2>
	</div>
			
	<div class="step-1">
		<h2>Step 1</h2>
		<h3>Accept browsers geolocation for best networking results</h3>
	</div>
			
	<div class="step-2" id="jump">
		<h2>Step 2</h2>
		<h3>Create a profile by authenticating with your Linkedin account</h3>
			<div class="row">
				<div class="col-md-4"></div>
					<div class="col-md-4 text-center">
						<br />
	  					<%= link_to "Authenticate with Linkedin", '/auth/linkedin', :class => "btn btn-primary button-white" %>
					</div>
					<div class="col-md-4"></div>
			</div>
	</div>
			
	<div class="step-3 hand-jump">
		<h2>Step 3</h2>
		<h3>Search local professionals by industry and proximity</h3>
			<div class="row">
				<div class="col-md-4"></div>
					<div class="col-md-4 text-center">
						<br />
	  					<%= link_to "Search", '/users/index', :class => "btn btn-success button-white" %>
					</div>
					<div class="col-md-4"></div>
			</div>
	</div>

	<div class="step-4">
		<h2>Step 4</h2>
		<h3>Bookmark your favorites to save them to your contacts page</h3>
			<div class="row">
				<div class="col-md-4"></div>
					<div class="col-md-4 text-center">
					<br />
	  					<%= link_to "Your Bookmark List", '/bookmarks', :class => "btn btn-info button-white" %>
					</div>
					<div class="col-md-4"></div>
			</div>
	</div>
</body>

	