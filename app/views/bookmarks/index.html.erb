<p id="notice"><%= notice %></p>

<h1>Listing Bookmarks</h1>

<table class="table table-hover table-margin">
  <thead>
    <tr>
      <th>Name</th>
      <th>Occupation</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.mark.name %></td>
        <td><%= bookmark.mark.description %></td>
        <td><%= bookmark.mark.location %></td>
        <td><%= link_to 'More Info', user_path(bookmark.mark.id) %></td>
        <td><%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
